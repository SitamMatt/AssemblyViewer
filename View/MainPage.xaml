<Page x:Class="View.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      xmlns:model="clr-namespace:Model.Data;assembly=Model"
      xmlns:viewModel="clr-namespace:ViewModel;assembly=ViewModel"
      Title="MainPage"
      >
    <!-- DataContext="{Binding MainViewModel, Source={StaticResource Locator}}" -->
    <Grid>
        <TextBlock Text="{Binding Message}"/>
        <TreeView Name="trvStructure" ItemsSource="{Binding Root}" Margin="10" TreeViewItem.Expanded="ItemExpanded">

            <TreeView.ItemTemplate>

                <HierarchicalDataTemplate DataType="{x:Type viewModel:TreeNode}" ItemsSource="{Binding Children}">
                    <TextBlock Text="{Binding Name}"></TextBlock>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</Page>
