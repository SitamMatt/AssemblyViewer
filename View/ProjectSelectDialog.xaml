<Window x:Class="View.ProjectSelectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:data="clr-namespace:Model.Services.Data;assembly=Model.Services"
        xmlns:viewModel="clr-namespace:ViewModel;assembly=ViewModel"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Title="ProjectSelectDialog"
        d:DataContext="{d:DesignInstance Type=viewModel:ProjectSelectDialogViewModel, IsDesignTimeCreatable=True}">
    <StackPanel Margin="10,10,10,10">
        <ListView ItemsSource="{Binding Projects}" SelectedItem="{Binding SelectedItem}">
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type data:Project}">
                    <TextBlock Text="{Binding Name}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Margin="0,5,0,5" Content="Ok" Command="{Binding SubmitCommand}"/>
        <Button Margin="0,5,0,5" Content="Cancel" Command="{Binding CancelCommand}"/>
    </StackPanel>
</Window>
